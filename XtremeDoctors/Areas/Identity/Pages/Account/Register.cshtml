@page
@model RegisterModel
@{
    Layout = "/Views/Shared/_Layout_small.cshtml";
}

    <h4>REGISTER</h4>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="container-fluid">

            
            <div class="row">

                <div asp-validation-summary="All" class="red-text"></div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">mail_outline</i>
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="red-text"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock_outline</i>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="red-text"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">repeat_outline</i>
                    <label asp-for="Input.ConfirmPassword"></label>

                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="red-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <button type="submit" class="btn waves-effect waves-light col s12">REGISTER</button>
            </div>
        </div>
    </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
