@model XtremeDoctors.Models.Appointment
@using static XtremeDoctors.Helpers.SlotHelper
@{
    ViewData["Title"] = "List";
}

    <div class="fixed-action-btn">
        <a class="btn-floating btn-large red">
            <i href="@Url.Action("Pdf", "Appointment")" class="large material-icons">picture_as_pdf</i>
        </a>
    </div>

<h2>Appointment list</h2>
<div class="row">
    <div class="card-panel grey lighten-5 z-depth-1">
        <table class="striped ">
            <thead>
                <tr >
                    <th>Date</th>
                    <th>Time</th>
                    <th>Doctor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Appointment appointment in (List<Appointment>)ViewBag.appointments)
                {
                    <tr>
                        <td>@appointment.Date.ToString("yyyy-MM-dd") </td>
                        <td>@SlotToHour(appointment.StartSlot) - @SlotToHour(appointment.EndSlot)</td>
                        <td>@appointment.Doctor.Name @appointment.Doctor.Surname</td>
                        <td>
                            <a class="btn" href="@Url.Action("View", "Appointment", new { id = @appointment.Doctor.Id })">VIEW</a>
                            <a class="btn red" href="@Url.Action("Cancel", "Appointment", new { id = @appointment.Doctor.Id })">CANCEL</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>

