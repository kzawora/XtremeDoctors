@model XtremeDoctors.Models.Doctor

@{
    Doctor doctor = ViewBag.doctor;
    DateTime date = ViewBag.date;
}
    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row valign-wrapper">

                        <div class="col s12">
                            <span class="black-text">
                                <div class="col s12">
                                    <img src="https://materializecss.com/images/yuna.jpg" alt="" class="circle  responsive-img" />
                                </div>
                                <div class="col s12">
                                    <strong>@doctor.Name @doctor.Surname</strong><br />
                                    <i>Ginekolog specjalista</i>
                                    <blockquote>
                                        Zbadam Cię bardzo tanio
                                    </blockquote>
                                </div>

                                <table class="striped">
                                    <tbody>
                                        <tr>
                                            <td>Poniedziałek</td>
                                            <td>7:00 - 14:00</td>
                                        </tr>
                                        <tr>
                                            <td>Wtorek</td>
                                            <td>7:00 - 14:00</td>
                                        </tr>
                                        <tr>
                                            <td>Środa</td>
                                            <td>7:00 - 14:00</td>
                                        </tr>
                                        <tr>
                                            <td>Czwartek</td>
                                            <td>7:00 - 14:00</td>
                                        </tr>
                                        <tr>
                                            <td>Piątek</td>
                                            <td>7:00 - 14:00</td>
                                        </tr>
                                    </tbody>
                                </table>


                            </div>
                    </div>

                </div>
            </div>

            <div class="col s12 m6">
                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row valign-wrapper">

                        <div class="col s12">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Termin</th>
                                        <th>Czas</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (String freeHour in (String[])ViewBag.freeHours)
                                    {
                                        <tr>
                                            <td>@freeHour</td>
                                            <td>15 minut</td>
                                            <td>
                                                @using (Html.BeginForm("Make", "Appointment", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="doctorId" value="@doctor.Id" />
                                                    <input type="hidden" name="date" value="@date" />
                                                    <input type="hidden" name="hour" value="@freeHour" />

                                                    <button type="submit" class="waves-effect waves-light btn-large right green"><i class="material-icons left">add_box</i>Umów się</button>
                                                }

                                            </td>
                                        </tr>
                                     }
                                    </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>